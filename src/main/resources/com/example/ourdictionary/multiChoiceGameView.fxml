<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.MultiChoiceGameController">
    <children>
        <Button mnemonicParsing="false" text="BACK" />
        <GridPane fx:id="answer" layoutX="123.0" layoutY="226.0" prefHeight="96.0" prefWidth="323.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="A" mnemonicParsing="false" onAction="#onAnswer" prefHeight="25.0" prefWidth="200.0" text="Button">
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin>
                </Button>
                <Button fx:id="C" mnemonicParsing="false" onAction="#onAnswer" prefHeight="25.0" prefWidth="198.0" text="Button" GridPane.rowIndex="1" />
                <Button fx:id="B" mnemonicParsing="false" onAction="#onAnswer" prefHeight="25.0" prefWidth="218.0" text="Button" GridPane.columnIndex="1" />
                <Button fx:id="D" mnemonicParsing="false" onAction="#onAnswer" prefHeight="25.0" prefWidth="256.0" text="Button" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>
      <Label fx:id="question" alignment="CENTER" layoutX="124.0" prefHeight="198.0" prefWidth="323.0" wrapText="true" />
      <Label fx:id="score" alignment="CENTER" layoutX="45.0" layoutY="-1.0" prefHeight="51.0" prefWidth="55.0" text="0/10" />
    </children>
</AnchorPane>
